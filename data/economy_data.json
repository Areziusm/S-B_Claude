  "pricing_formulas": {
    "dynamic_calculation": {
      "base_formula": "base_price * quality_modifier * supply_demand * magic_inflation * reputation_discount",
      "supply_demand": {
        "calculation": "1.0 + ((demand - supply) / (demand + supply)) * volatility_factor",
        "min_value": 0.3,
        "max_value": 3.0
      },
      "reputation_effects": {
        "excellent": 0.75,
        "good": 0.85,
        "neutral": 1.0,
        "poor": 1.15,
        "hostile": 1.5
      }
    },
